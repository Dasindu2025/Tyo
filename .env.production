# Environment variables for production deployment
# Copy this file to .env and fill in with your actual values

# Database
DB_PASSWORD=your-super-strong-database-password-here

# JWT Secrets (Generate strong random strings, minimum 64 characters)
JWT_SECRET=your-jwt-secret-minimum-64-characters-use-random-generator
JWT_REFRESH_SECRET=your-jwt-refresh-secret-minimum-64-characters-different-from-above

# CORS (Set to your frontend domain in production)
CORS_ORIGIN=https://yourdomain.com

# Optional: Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
